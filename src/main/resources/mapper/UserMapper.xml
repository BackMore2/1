<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.backmore2.chatroom.mapper.UserMapper">
    <update id="updateUser" parameterType="com.backmore2.chatroom.entity.User">
        UPDATE user
        SET nickname = #{nickname},
            avatar = #{avatar}
        WHERE username = #{username}
    </update>

    <select id="findByUsername" resultType="com.backmore2.chatroom.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
</mapper>